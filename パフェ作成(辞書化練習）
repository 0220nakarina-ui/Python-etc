#パフェが食べたい、フルーツパフェ食べたい、おなかいっぱい食べたい
#作ってみよう

# パフェに入れる材料リスト
ingredients = ["グラノーラ","ヨーグルト","フルーツ","トッピングのフルーツ","アイス"]

#アレンジ
mode = "生クリーム少なめ"

print("パフェ作りスタート！")

# 材料と量の設定（ここを変えると出力が変わる）
ingredients_amount = {
    "グラノーラ": "適量",
    "ヨーグルト":"少なめ",
    "アイス": "少なめ",
    "フルーツ": "多め",
    "トッピングのフルーツ": "多め",
    "アイス": "普通の量"
}

#材料を入れていくよ、ループ使用
for item in ingredients: # forループの構文を修正、ループ変数名を'item'に統一
    amount = ingredients_amount[item] # 分量を取り出す
    print(f"{item}を{amount}に入れます")  # ここで出力

    #条件分岐で量を変更
    if mode == "グラノーラ適量" and item == "グラノーラ": #グラノーラは適量がいいな
        print(f"{item}を適量入れる")
    elif mode == "乳製品少なめ" and item in ["アイス"]:#乳製品は少なめがいい、おなか痛くなる
        print(f"{item}を少なめに入れる")
    elif mode == "フルーツ多め" and item in ["トッピングのフルーツ"]: #フルーツ多めがいいな
        print(f"{item}を多めに入れる")
    else:
        print(f"{item}を入れる")#いっぱい入れよう

#whileで微調整
shake = 3
while shake > 0:
  print("カップをトントンして微調整")
  shake -= 1

print("🌟フルーツパフェ完成!!🌟")#完成
